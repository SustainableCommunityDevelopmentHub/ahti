extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom

 
  - var userr = { id: user.group }
  if userr.id  === ""
         span.caps research - 
  else
         span.caps #{ user.group } research -
  a(href='/account/researchsettings') define your research - 
  a(href='/account/createresearchnote') add notes

    hr

    br

  h3 Research notes
 
  hr


  - if (researchdata.length)
    each items in researchdata
         if items.research === userr.id 
           strong #{items.name} #{items.group} #{items.date}
           div admin: #{items.admin} witness: #{items.witness}
           div #{items.comment}
           hr

  br
  br
  br
  br
  br
  br
  hr

  include ../partials/profilehead.pug
