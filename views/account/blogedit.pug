extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom

    h3 Blog Post Edit

    a(href='/account/bloghomepage') homepage - 
    a(href='/account/blogsettings') settings -
    a(href='/account/createpost') create a new post


    .form-group.row
    a(href='/account/blogsettings') Blog Settings

  form(action='/account/blog', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    input(type='hidden', name='user', value=user.id)
    input(type='hidden', name='username', value=blogdata.username)
    input(type='hidden', name='blogpost_id', value=blogdata._id)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='posttitle') Post Title
      .col-md-7
        input.form-control(type='text', name='posttitle', value=blogdata.posttitle, id='posttitle')
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='authorname') Author name
      .col-md-7
        input.form-control(type='text', name='authorname', value=blogdata.authorname, id='authorname')

    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='post') Post Content
      .col-md-7
        input.form-control(type='text', name="post", value=blogdata.post, id='post')

    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='postcat') Category
      .col-md-7
        input.form-control(type='text', name='postcat', id='postcat', value=blogdata.postcat)

    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='posttags') Tags
      .col-md-7
        input.form-control(type='text', name='posttags', value=blogdata.posttags, id='posttags')

    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='postdate') Date
      .col-md-7
        input.form-control(type='date', name='postdate', id='postdate', value=moment(blogdata.postdate).format("YYYY-MM-DD"))

    .form-group
      .offset-sm-3.col-md-7.pl-2
        button.btn.btn.btn-primary(type='submit')
          i.fas.fa-pencil-alt.fa-sm
          | update post


  include ../partials/profilehead.pug
