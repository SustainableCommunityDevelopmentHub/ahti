extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
  include ../partials/profilehead.pug
  
  span TRANSACTIONS - 
  a(href='/account/activity') History - 
  a(href='/account/activity-print') Data sheet - 
  a(href='/account/setup') Settings


    hr

  h3 Request Funds

  form(action='/account/reqpayment', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    input(type='hidden', name='username', value=user._id)
    input(type='hidden', name='name', value=user.name)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='source') Source
      .col-md-7
        input.form-control(type='text', name='source', id='source')
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='amount') Amount
      .col-md-7
        input.form-control(type='number', name='amount', id='amount')
    .form-group
      .offset-sm-3.col-md-7.pl-2
        button.btn.btn.btn-primary(type='submit')
          i.fas.fa-pencil-alt.fa-sm
          | Create post
