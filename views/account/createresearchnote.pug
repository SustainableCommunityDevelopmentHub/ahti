extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom

  a(href='/account/project') project -
  a(href='/account/projectsettings') Settings

  hr

  h3.caps NEW #{user.project} RESEARCH NOTE


  //-  const projectdataSchema = new mongoose.Schema({
    * user: String,
