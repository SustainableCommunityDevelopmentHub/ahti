extends ../publiclayout

block content
  .pb-2.mt-2.mb-4.border-bottom

    h3 
      #{blogname}     

    each post in blogs

      .col
        .row
          h2 #{post.posttitle}
   
        .row

      p Categories: #{post.postcat} 
      p Tags: #{post.posttags} 

      blockquote #{post.subtext} 
      div(escaped="#{post.post}")
      p.unescaped #{post.post}
      p #{moment(post.createdAt).format('LT, MMM D, YYYY')}

      hr
  
